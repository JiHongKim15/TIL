import java.util.ArrayList;
import java.util.LinkedList;
import java.util.Scanner;

public class 사회망서비스_2533 {
	static int[] snsc;
	private static ArrayList<Integer>[] sns;

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int N = sc.nextInt();

		sns = new ArrayList[N+1];
		snsc = new int[N + 1];
		
		for (int i = 0; i < N+1; i++) {
			sns[i]args = new ArrayList<Integer>();
		}

		for (int i = 0; i < N - 1; i++) {
			int a = sc.nextInt();
			int b = sc.nextInt();
			
			sns[a].add(b);
		}

		for (int i = 1; i < sns.length; i++) {
			if(snsc[i] == 0)
				dfs(i, 1);
		}
			
		
		int a=0, b = 0;
		for (int i = 1; i < snsc.length; i++) {
			if(snsc[i] == 1)
				a++;
			else
				b++;
		}
		
		System.out.println(Math.min(a, b));

	}

	private static void dfs(int st, int stc) {
		snsc[st] = stc;
		// TODO Auto-generated method stub
 		for (int i = 1; i < sns[st].size(); i++) {
			if(snsc[i] == 0) {
				if(stc == 1)
					dfs(i, 2);
				else
					dfs(i, 1);
			}
		}
	}

}
