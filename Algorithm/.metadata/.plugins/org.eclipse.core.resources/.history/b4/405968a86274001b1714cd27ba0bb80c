import java.util.Scanner;

public class 숫자고르기_2668 {
	static boolean check[];
	static int max = 0;
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int N = sc.nextInt();
		int[] arr = new int[N + 1];
		for (int i = 1; i <= N; i++) {
			arr[i] = sc.nextInt();
		}

		check = new boolean[N+1];
		for (int i = 1; i <= N; i++) {
			dfs(arr, i, i, 1);
		}
		System.out.println(max);
	}

	private static int dfs(int[] arr, int i, int start, int cnt) {
		if(i >= arr.length)
			return cnt;
		
		if(start == arr[i]) {
			max += cnt;
			return cnt;
		}
		if(!check[i]) {
			check[i] = true;
			dfs(arr, arr[i], start, cnt+1);
		}
		
		return -1;
		

	}

}
